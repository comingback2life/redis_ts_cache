{
  "compilerOptions": {
    "target": "ES5",                          
    "module": "ES2015",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },  
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },

}